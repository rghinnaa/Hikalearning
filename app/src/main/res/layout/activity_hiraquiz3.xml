<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff" >


    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">
    	
        
         <TextView
        	android:id="@+id/textView1"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="1/15"
        	android:layout_marginTop="10dp"
        	android:layout_marginLeft="20dp"
        	android:layout_marginBottom="10dp"
        	android:textSize="18sp" />
        <ImageView 
            android:id="@+id/imageView1"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginLeft="220dp"
        	android:layout_marginTop="10dp"
        	android:layout_marginBottom="10dp"
        	android:src="@drawable/salah" />
        <TextView 
            android:id="@+id/bsalah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="12sp"
        	android:layout_marginLeft="5dp"
        	android:layout_marginTop="8dp"
        	android:layout_marginBottom="10dp"
        	android:textColor="#E62129"/>
        <ImageView 
            android:id="@+id/imageView2"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginLeft="20dp"
        	android:layout_marginTop="10dp"
        	android:layout_marginBottom="10dp"
        	android:src="@drawable/benar" />
        <TextView 
            android:id="@+id/bbenar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="12sp"
        	android:layout_marginLeft="5dp"
        	android:layout_marginTop="8dp"
        	android:layout_marginBottom="10dp"
        	android:textColor="#009B4C"/>
        
    </LinearLayout>

	<ProgressBar
		android:id="@+id/progressBar"
		style="?android:attr/progressBarStyleHorizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" />

	<TextView
		android:id="@+id/tvsoal"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ã‚"
        android:textSize="50sp"
        android:paddingTop="70dp"
        android:paddingBottom="70dp"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:background="#F4B3B3"
        android:textColor="#fff"/>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp">

	</LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">

		<EditText
			android:id="@+id/ans"
			android:textSize="30dp"
			android:layout_width="250dp"
			android:layout_height="wrap_content" />
		<ImageView
			android:id="@+id/enter"
			android:layout_marginLeft="20dp"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:background="@drawable/bgenter"
			app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp"/>

    </LinearLayout>

</LinearLayout>